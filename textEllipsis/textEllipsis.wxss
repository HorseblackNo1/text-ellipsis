/* components/textEllipsis/textEllipsis.wxss */
.content {
  position: relative;
}

.contentInner {
  width: 100%;
  font-size: 26rpx;
  font-weight: 300;
  color: #333333;
  line-height: 48rpx;
}

.button_bg {
  background: #395FD4;
  color: #FFFFFF;
}

.open {
  width: 18rpx;
  height: 18rpx;
  background-size: 100% 100%;
  margin-left: 4rpx;
  transform: rotate(0deg);
}

.comment_more {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 400;
  color: #002FA7;
  margin-top: 30rpx;
  height: 34rpx;
}

.hideArea {
  position: absolute;
  top: 0;
  left: -9999rpx;
}

.text-clamp1 {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

